<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F0"
    android:orientation="vertical">

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:childVerticalPadding="8dp"
        app:leftIcon="@drawable/ic_left_24"
        app:leftIconGravity="top"
        app:leftIconHeight="20dp"
        app:leftIconPadding="5dp"
        app:leftIconWidth="20dp"
        app:leftTitle="back"
        app:leftTitleColor="#666666"
        app:leftTitleSize="12sp"
        app:rightIcon="@drawable/ic_graph_24"
        app:rightIconGravity="top"
        app:rightIconHeight="20dp"
        app:rightIconWidth="20dp"
        app:rightTitle="graph"
        app:rightTitleColor="#666666"
        app:rightTitleSize="12sp"
        app:title="DETAIL"
        app:titleIconGravity="bottom"
        app:titleIconHeight="10dp"
        app:titleIconWidth="10dp" />

    <ImageView
        android:id="@+id/iv_device"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        android:background="#ffffff"
         />

    <LinearLayout
        android:id="@+id/tv_group"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_att"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="ATT"
            android:textAlignment="center"
            android:background="@drawable/shape_item_selector"
            />
        <TextView
            android:id="@+id/tv_cmd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="CMD"
            android:textAlignment="center"
            android:background="@drawable/shape_item_normal"
            />
        <TextView
            android:id="@+id/tv_sts"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="STS"
            android:textAlignment="center"
            android:background="@drawable/shape_item_normal"
            />
        <TextView
            android:id="@+id/tv_dta"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DTA"
            android:textAlignment="center"
            android:background="@drawable/shape_item_normal"
            />
        <TextView
            android:id="@+id/tv_dia"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="DIA"
            android:textAlignment="center"
            android:background="@drawable/shape_item_normal"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>