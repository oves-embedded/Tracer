<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_circle_check_null"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/iv_devIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@mipmap/icon_camp"
            android:background="@drawable/shape_circle_img"
            />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_bleName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#353535"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="OVES 0D3 000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_mac"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="#353535"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="0D:0A:02:66"/>
                <TextView
                    android:id="@+id/tv_dbm"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:textColor="#353535"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="0D:0A:02:66"/>
            </LinearLayout>
<!--            <TextView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:textColor="#353535"-->
<!--                android:gravity="center_vertical"-->
<!--                android:textSize="14sp"-->
<!--                android:text="0D:0A:02:66"/>-->
        </LinearLayout>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_right_35"
            android:layout_gravity="center_vertical"
            app:tint="@color/white"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


</LinearLayout>